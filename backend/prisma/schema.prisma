generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wallet {
  id        String   @id @default(cuid())
  address   String   @unique
  score     Int
  label     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  signals   WalletSignal[]
}

model WalletSignal {
  id       String @id @default(cuid())
  walletId String
  type     String
  value    String
  weight   Int

  wallet   Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
}

model WalletProfile {
  id               String   @id @default(cuid())
  address          String   @unique

  firstSeen        DateTime
  lastSeen         DateTime

  txCount          Int
  approxVolume     Float    // simple CRO in/out approximation

  tokensSeen       String[] // token contract addresses
  contractsSeen    String[] // general contract interactions

  source           String   // "cronos"
  fetchedAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([address])
}

